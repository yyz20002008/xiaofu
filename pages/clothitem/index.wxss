/* pages/clothitem/index.wxss */

page{
padding-bottom: 90rpx;
}
.btm_tool{
  border-top: 1rpx solid #ccc;
  position: fixed;
  left:0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex; 
 
}
.tool_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btn_cart{
  flex:2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4458;
  color: #fff;
  font-size:30rpx;
  font-weight:600;
}