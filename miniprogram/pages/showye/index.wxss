/* pages/showye/showye.wxss */



.page-section{
  justify-items: center;
}
.text-box{
  justify-items: center;
}
.page_title{
  text-align: center;
  font-size: 34rpx;
}
.weui-cells{
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.weui-input {
  text-align: center;
  width: 60%; /* 设置输入框宽度为 80% */
  height: 30px; /* 设置输入框高度为 30px */
  border: 1px solid #ccc; /* 设置输入框边框样式 */
  border-radius: 4px; /* 设置输入框边框圆角 */
  /*padding: 5px;  设置输入框内边距 */
  font-size: 16px; /* 设置输入框字体大小 */
 
}

.weui-btn-area{
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.weui-btn{
  text-align: center;
  width: 40%; /* 设置输入框宽度为 80% */
  border-radius: 4px; /* 设置输入框边框圆角 */
  font-size: 16px; /* 设置输入框字体大小 */
}
