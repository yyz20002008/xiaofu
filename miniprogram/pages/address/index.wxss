/* pages/address/index.wxss */
page{
  display: block;  
  min-height: 100%;  
  background-color:#f6f6f6;  
  font-size: 30rpx;
  color:#353535;
  padding-bottom: 110rpx;
}
.container{
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom:1rpx solid #e0e0e0;
}
.iconfont{
  color: var(--themeColor);
  font-size: 44rpx;
}
/* 地址信息 */
.item{
  padding:10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  border-bottom:1rpx solid #e0e0e0;
}
/*checkbox和地址*/
.item_select_wrap{
  flex:8;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:10rpx;
 
}

.item_select_wrap .iconfont.icon-checked,
.item_select_wrap .iconfont.icon-unchecked
{
  flex:0.8;/*checkbox 横着站位*/
  padding-top: 35rpx;
}
.item_content_wrap{
  flex:7;/*地址 横着站位*/
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.item_content_wrap .row{
  flex:2;/*每行竖着站位*/
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
/*edit delete */
.item_update_wrap{
  flex:1;/*横着站位*/
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding-left:20rpx;
  
}
.item_update_wrap .iconfont.icon-delete{
 justify-content: center;
}
.item_update_wrap .iconfont.icon-edit{
  justify-content: center;
 }

/* 新增地址 */
.add{
  width:100%;  
  height: 90rpx;
  background-color:#fff;
  position: fixed;
  left: 0;
  bottom: 0;
  padding:15rpx;
  border-top:1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.add .iconfont.icon-add{
  flex:0.5;
  margin-top:20rpx;
}
.add .iconfont.icon-right{
  flex:0.5;
  margin-top:20rpx;
  padding-right: 10rpx; 
}
.text{
  flex:6;
  margin-top:20rpx;
  font-size: 35rpx;
  float: left;
}
