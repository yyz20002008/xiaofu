    <view>购物车</view>
  </navigator>
  <!-- 总价格 -->
  <view class="total_price_wrap">
    <view class="total_price">
      选中价格：<text class="total_price_text">￥{{clothInfo.cloth_price}}</text>
    </view>
  <!-- <view>包含运费</view>-->
  </view>
  <view class="tool_item btn_cart" bindtap="handleCartAdd">
    加入购物车
