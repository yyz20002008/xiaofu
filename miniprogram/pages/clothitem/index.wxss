/* pages/clothitem/index.wxss */

page{
padding-bottom: 90rpx;
}
input{
  font-size: 30rpx;
  width: 700rpx;
}
/*
底部工具栏
*/
.btm_tool{
  border-top: 1rpx solid #ccc;
  position: fixed;
  left:0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex; 
 
}
.tool_item{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  position: relative;
}
button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btn_cart{
  flex:3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4458;
  color: #fff;
  font-size:30rpx;
  font-weight:600;
}
.total_price_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
}

.total_price_wrap{
  flex: 3;
  flex-direction: column;
  padding-right: 20rpx;
}
.total_price_wrap .total_price{
  font-size: 32rpx;
}
.total_price_wrap .total_price_text{
  color: var(--themeColor);
  font-weight: bold;
  font-size: 32rpx;
}

/*
radio
*/
.ui-radio radio,.ui-radio checkbox {
  display: none;
}

.label{
  margin-left: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}

.ui-radio{
  border: 1px solid #D9D9D9;
  border-radius: 5px;
  width: 160rpx;
  height: 70rpx;
  text-align: center;
  margin: 10rpx 10rpx;
  white-space:nowrap;
  font-size: 14px;
  
}

.ui-radio.active{
  background-color: #1AAD19;
  color: #fff;
  border-radius: 5px;
  border: 1px solid #1AAD19;
  width: 160rpx;
  height: 70rpx;
  text-align: center;
  margin: 10rpx 10rpx;
  white-space:nowrap;
}

.text{
  color:#000;
  line-height:70rpx;
  font-size: 14px;
}

.ui-radio.active .text{
  color:#fff;
  line-height:70rpx;
  font-size: 14px;
}

