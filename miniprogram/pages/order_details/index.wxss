/* pages/order_details/index.wxss */
page{
  background-color:#f6f6f6;  
}
.item{
  padding:10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  border-bottom:1rpx solid #e0e0e0;
  margin-top: 10rpx;
  background-color: #fff;
}

.order_item{
  padding: 10rpx 20rpx;
  border-bottom: 1px solid #ccc;
}

/*
订单产品
*/
.order_no_row,
.order_price_row,
.order_time_row{
  display: flex;
  justify-content: space-between;
  line-height: 48rpx;
}
.order_price_value{
  color: var(--themeColor);
  font-size: 32rpx;
}
.order_no_value{
  display: flex;
  justify-content: space-between;
}
/* 地址信息 */

.item_content_wrap{
  flex:7;/*地址 横着站位*/
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}
.item_content_wrap .row{
  flex:2;/*每行竖着站位*/
  display: flex;
 
  justify-content: space-between;
}