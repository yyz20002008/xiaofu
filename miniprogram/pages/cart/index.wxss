/* pages/cart/index.wxss */
page{
  padding-bottom: 90rpx;
}

.revice_address_row .address_btn{
 padding: 20rpx;
}
button{
width: 60%;
}
/* 收货地址 */

.address_title{
  font-size: 34rpx;
  font-weight: bold;
  padding: 10rpx;
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.user_info_row{
  display: flex;
  padding: 20rpx;  
  font-size: 30rpx;
}
.user_info_row .user_info{
  flex: 6;
}
.user_info_row .user_phone{
  flex: 3;
  text-align: right;
}
/* 购物车内容 */
.cart_title{
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.cart_title{
  display: flex;
}
.cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_chk_wrap, 
.cart_img_wrap{
  flex: 0.5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap{
  flex: 4;
}
.cart_img_wrap image{
  width: 100%;
}
.cart_info_wrap{
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.cart_info_wrap .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}


.goods_price_wrap{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.goods_price_wrap .goods_price{
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_num_tool{
  display: flex;
}
.cart_num_tool .num_edit{
  width: 50rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart_num_tool .goods_num{
  width: 70rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
.cart_num_tool{
  border: none;
}

/* 底部工具栏 */
.footer_tool{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.all_chk_wrap,
.total_price_wrap,
.order_pay_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
}
.all_chk_wrap{
  flex: 2;
}
.total_price_wrap{
  flex: 4;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 20rpx;
  /*font-size: 24rpx;*/
  text-align: right;
}
.total_price_wrap .total_price{
  font-size: 32rpx;
}
.total_price_wrap .total_price_text{
  color: var(--themeColor);
  /*font-weight: bold;*/
  font-size: 32rpx;
}
.order_pay_wrap{
  flex: 3;
  color:#fff;
  font-size: 34rpx;
  background-color: var(--themeColor);
  font-weight: 600;

}